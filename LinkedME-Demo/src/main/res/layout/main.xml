<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main_background"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ground_line"
                android:padding="@dimen/distance_90"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"/>

        <ImageView
                android:id="@+id/more"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance_10"
                android:layout_marginTop="@dimen/distance_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/introduction_tip"
                app:columnCount="2"
                app:rowCount="2">

            <ImageButton
                    android:id="@+id/id_apps"
                    style="@style/apps_icon"
                    android:src="@drawable/selector_btn_apps_bg"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <ImageButton
                    android:id="@+id/id_features"
                    style="@style/apps_icon"
                    android:src="@drawable/selector_btn_featrues_bg"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <ImageButton
                    android:id="@+id/id_demo"
                    style="@style/apps_icon"
                    android:src="@drawable/selector_btn_demo_bg"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>

            <ImageButton
                    android:id="@+id/id_intro"
                    style="@style/apps_icon"
                    android:src="@drawable/selector_btn_introction_bg"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"/>
        </android.support.v7.widget.GridLayout>

        <TextView
                android:id="@+id/introduction_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/distance_20"
                android:text="@string/str_introduction_tip"
                android:textColor="@color/color_main_introduction_tip"
                android:textSize="@dimen/text_size_10"/>

    </RelativeLayout>
</LinearLayout>

